<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mopidev.blackngram">
    
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/myApp">
        <activity android:name=".View.Implementation.LoginActivity"
            android:label="@string/LoginTitleActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".View.Implementation.MainActivity"
            android:label="@string/MainTitleActivity">
        </activity>
        <activity android:name=".View.Implementation.FullScreenImageActivity">
        </activity>
        <activity android:name=".View.Implementation.FavoriteActivity"
            android:label="@string/FavoriteTitleActivity">
        </activity>
    </application>

</manifest>
